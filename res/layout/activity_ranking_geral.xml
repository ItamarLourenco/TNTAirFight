
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_ranking"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/btn_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="14dip"
                android:src="@drawable/voltar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dip"
                android:layout_weight="1"
                android:src="@drawable/header" />

            <ImageView
                android:id="@+id/configuracoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:contentDescription="@string/opcoes"
                android:src="@drawable/ico_opcoes" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="40dip"
            android:contentDescription="@string/ranking_geral"
            android:src="@drawable/tit_ranking" />

        <ListView
            android:id="@+id/lista_ranking"
            android:layout_width="match_parent"
            android:divider="#FFF"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>
