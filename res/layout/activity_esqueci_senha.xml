<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:background="@drawable/bg_ranking"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/btn_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="14dip"
                android:src="@drawable/voltar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dip"
                android:layout_weight="1"
                android:src="@drawable/header" />

            <ImageView
                android:id="@+id/configuracoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:visibility="invisible"
                android:layout_marginTop="5dip"
                android:contentDescription="@string/opcoes"
                android:src="@drawable/ico_opcoes" />

        </LinearLayout>

	       <ImageView
	           android:id="@+id/recuperar_senha"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginBottom="70dip"
	           android:layout_marginTop="70dip"
	           android:contentDescription="@string/recuperar_senha"
	           android:src="@drawable/digite_seu_email_abaixo_para_receber_seu_usuario_e_senha" />
	       
	       <EditText
	           android:id="@+id/email"
	           android:layout_width="match_parent"
	           android:layout_height="60dip"
	           android:layout_marginBottom="15dip"
	           android:layout_marginLeft="30dip"
	           android:layout_marginRight="30dip"
	           android:background="@drawable/backtext"
	           android:hint="@string/email"
	           android:paddingLeft="5dp"
	           android:textColor="#FFF"
	           android:textColorHint="#FFF">
	
	       </EditText>
	
	       <ImageView
	           android:id="@+id/btn_enviar"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_margin="20dip"
	           android:contentDescription="@string/login"
	           android:src="@drawable/btn_enviar" />
	
	       	
	</LinearLayout>
</ScrollView>