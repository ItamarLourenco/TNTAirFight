                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="14dip"
                    android:src="@drawable/voltar" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
